    <creationDate>04.09.2024</creationDate>
    <namespace path="src">Joomla\Component\Vlogs</namespace>
    <scriptfile>script.php</scriptfile>
    <administration>
        <menu>COM_VLOGS</menu>
        <files folder="admin">
            <folder>services</folder>
            <folder>src</folder>
            <folder>tmpl</folder>
            <filename>access.xml</filename>
            <filename>config.xml</filename>
