    <updateservers>
        <server type="extension" priority="1" name="View logs updates">https://web-tolk.ru/component/swjprojects/jupdate?element=com_vlogs</server>
        <server type="extension" priority="2" name="View Logs">https://joomla-update.org/extensions/com_vlogs/vlogs_update.xml</server>
